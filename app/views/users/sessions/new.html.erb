<h2 class="user-title text-light" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user-form") do |f| %>
  <div class="form-outline mb-4 text-light">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>
  <%= recaptcha_tags %>

  <% if devise_mapping.rememberable? %>
    <div class="row mb-4 ">
      <div class="col d-flex text-light">
        <%= f.check_box :remember_me, class:"form-check-input " %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    </div>
  <% end %>
  <div class="actions text-light">
    <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
<div class="text-light">
  <%= render "users/shared/links" %>
</div>



